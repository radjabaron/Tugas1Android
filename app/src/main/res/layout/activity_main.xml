<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/material_grey_100"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:weightSum="1"
        tools:context="id.sch.smktelkom_mlg.tugas01.xiirpl1010.daftarkaryawan.MainActivity">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="176dp"
            android:layout_height="121dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Isilah data dibawah ini dengan benar dan tepat :"
            android:textColor="@color/abc_primary_text_disable_only_material_light" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="0.03"
            android:text="Nama "
            android:textColor="@color/abc_input_method_navigation_guard"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.04"
            android:hint="Nama Lengkap"
            android:textColor="@color/abc_primary_text_disable_only_material_light"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="0.03"
            android:text="Tanggal Lahir"
            android:textColor="@color/abc_input_method_navigation_guard"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextDate"
                android:layout_width="257dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:hint=" Tanggal Lahir"
                android:textColor="@color/abc_primary_text_disable_only_material_light"
                android:textSize="16sp" />

            <Button
                android:id="@+id/buttonTGL"
                android:layout_width="73dp"
                android:layout_height="35dp"
                android:text="SELECT "
                android:textSize="10sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="0.08"
            android:text="Jenis Kelamin"
            android:textColor="@color/abc_primary_text_disable_only_material_light"
            android:textSize="16sp" />

        <RadioGroup
            android:id="@+id/radioGroupJnsKelamin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.08">

            <RadioButton
                android:id="@+id/radioButtonLaki"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:checked="false"
                android:text="Laki - Laki"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/radioButtonPerempuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="0.08"
                android:checked="false"
                android:text="Perempuan"
                android:textSize="16sp" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="0.08"
            android:text="Agama"
            android:textColor="@color/abc_primary_text_disable_only_material_light"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spinnerAgama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/agama" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="0.03"
            android:text="Asal Daerah"
            android:textColor="@color/abc_primary_text_disable_only_material_light"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spinnerProvinsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.08"
            android:entries="@array/provinsi" />

        <Spinner
            android:id="@+id/spinnerKota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.08" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="0.08"
            android:text="Alamat Lengkap"
            android:textColor="@color/abc_primary_text_disable_only_material_light"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextAlamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="0.04"
            android:hint="Alamat Lengkap"
            android:textColor="@color/abc_primary_text_disable_only_material_light"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="0.08"
            android:text="Pendidikan Terakhir"
            android:textColor="@color/abc_primary_text_disable_only_material_light"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spinnerPendidikan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/pendidikan" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="0.08"
            android:text="Keahlian"
            android:textColor="@color/abc_primary_text_disable_only_material_light"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/checkBoxPEM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.08"
            android:checked="false"
            android:text="Pemograman" />

        <CheckBox
            android:id="@+id/checkBoxJAR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.08"
            android:checked="false"
            android:text="Jaringan" />

        <CheckBox
            android:id="@+id/checkBoxDES"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.08"
            android:checked="false"
            android:text="Design" />

        <CheckBox
            android:id="@+id/checkBoxANI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.08"
            android:backgroundTint="#8ac43f"
            android:checked="false"
            android:text="Animasi" />

        <Button
            android:id="@+id/buttonProses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#8ac43f"
            android:text="PROSES"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textViewHasil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="0.08" />

        <LinearLayout
            android:id="@+id/LinearLayoutDaftar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.14"
            android:visibility="gone">

            <Button
                android:id="@+id/buttonDaftar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Daftar" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayoutBerhasil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:layout_marginTop="20pt"
                android:text="                   Selamat Registrasi Anda Berhasil"
                android:textColor="#000000" />

        </LinearLayout>


    </LinearLayout>

</ScrollView>
